<h1>Welcome to Sports Memorabilia</h1>


<div class="container">
    <div class="row">
        <% @products.each do |product| %>
            <div class="col-4">
                <div class="card text-center" style="width: 18rem; height:30rem; margin-bottom: 2rem">
                    <div><%= link_to(image_tag(product.pic, size: 10*10, class: "my-pic"), product) %></div>
                    <div class="card-body">
                        <h3 class="card-title"><%= product.name %></h3>
                        <p class="card-text"><%= product.brand %></p>
                        <p class="card-text"><%= product.price %></p>
                        <% if user_signed_in? && current_user.id == product.user_id%>
                            <%= button_to "Edit", "/products/#{product.id}/edit", method: :get, class: "btn btn-info" %>
                            <%= button_to "Delete", product, method: :delete, class: "btn btn-danger"%>
                            <%= button_to "Add to shopping cart", "/products/shoppingcart", method: :get, class: "btn btn-primary" %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<h1>Create new memorabilia</h1>

<%= form_with scope: :product, url: products_path, local: true do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </p>

  <p>
    <%= form.label :material %>
    <%= form.text_field :material %>
  </p>

  <p>
    <%= form.label :size %>
    <%= form.text_field :size %>
  </p>

  <p>
    <%= form.label :player %>
    <%= form.text_field :player %>
  </p>

  <p>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :pic %>%
    <%= form.file_field :pic %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>